@model Order

<form asp-action="Checkout" method="post">
    <h4>Purchase</h4>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="bg-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="bg-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="bg-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Town"></label>
        <input asp-for="Town" class="form-control" />
        <span asp-validation-for="Town" class="bg-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="County"></label>
        <input asp-for="County" class="form-control" />
        <span asp-validation-for="County" class="bg-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EirCode"></label>
        <input asp-for="EirCode" class="form-control" />
        <span asp-validation-for="EirCode" class="bg-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="bg-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Complete Order" />
    @*<button type="submit" class="btn btn-primary" value="Complete Order" asp-controller="Payment" asp-action="Index">Proceed</button>*@
</form>